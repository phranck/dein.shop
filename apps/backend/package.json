{
  "name": "@dein-shop/backend",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "tsx --env-file=.env.local watch src/index.ts",
    "build": "tsup",
    "start": "node dist/index.js",
    "typecheck": "tsc --noEmit",
    "db:migrate": "tsx --env-file=.env.local src/db/migrate.ts",
    "db:seed": "tsx --env-file=.env.local src/scripts/seed.ts",
    "db:fetch-og": "tsx --env-file=.env.local src/scripts/fetch-og-images.ts"
  },
  "dependencies": {
    "@dein-shop/shared": "*",
    "@hono/node-server": "^1.13.7",
    "@hono/zod-validator": "^0.4.3",
    "bcryptjs": "^2.4.3",
    "better-sqlite3": "^11.9.1",
    "drizzle-orm": "^0.38.4",
    "hono": "^4.7.4",
    "resend": "^4.2.0",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/better-sqlite3": "^7.6.12",
    "@types/node": "^22.0.0",
    "drizzle-kit": "^0.30.4",
    "tsup": "^8.4.0",
    "tsx": "^4.19.3",
    "typescript": "^5.7.3"
  }
}
